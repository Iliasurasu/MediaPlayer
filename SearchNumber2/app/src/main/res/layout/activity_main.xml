<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/background_light">

    <!-- Заголовок приложения -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Угадай число!"
        android:textSize="24sp"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"/>

    <!-- Группа элементов в левом верхнем углу -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <!-- Отображение числа попыток -->
        <TextView
            android:id="@+id/attemptsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Осталось попыток: 3"
            android:textSize="16sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginBottom="4dp"/>

        <!-- Отображение диапазона -->
        <TextView
            android:id="@+id/rangeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Диапазон: 1 - 20"
            android:textSize="16sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>

    <!-- Поле ввода числа -->
    <EditText
        android:id="@+id/guessInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите число"
        android:inputType="number"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Кнопка проверки -->
    <Button
        android:id="@+id/checkButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Проверить"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:padding="12dp"/>

    <!-- Текст результата -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"/>

</LinearLayout>
